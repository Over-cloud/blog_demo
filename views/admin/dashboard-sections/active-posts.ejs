<div class="dashboard-content">

    <div class="dashboard-title">
        <h2>Manage Posts</h2>
    </div>

    <ul class="dashboard-post-ul">
        <% activePostsData.posts.forEach(post => { %>
            <li>
                <div class="dashboard-post-info">
                    <a href="post/<%= post._id %>">
                        <span><%= post.title %></span>
                        <span class="article-date"><%= post.createdAt.toDateString() %></span>
                    </a>
                </div>

                <div class="dashboard-post-controls">
                    <form action="edit-post/<%= post._id %>" method="get">
                        <button type="submit" class="btn btn-edit">
                    </form>
                    <form class="" action="delete-post/<%= post._id %>?_method=PUT" method="post">
                        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                        <button type="submit" class="btn btn-delete"></button>
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>

    <div class="pagination-controls">
        <ul class="pagination-list">
            <% if (activePostsData.pageNum > 1) { %>
                <li>
                    <a href="?page=<%= activePostsData.pageNum - 1 %>" class="pagination-link">&lt;</a>
                </li>
            <% } %>
            <% for (let i = 1; i <= activePostsData.totalPages; i++) { %>
                <li>
                    <a href="?page=<%= i %> %>" class="pagination-link <%= i === activePostsData.pageNum ? 'active' : '' %>"><%= i %></a>
                </li>
            <% } %>
            <% if (activePostsData.pageNum < activePostsData.totalPages) { %>
                <li>
                    <a href="?page=<%= activePostsData.pageNum + 1 %> %>" class="pagination-link">&gt;</a>
                </li>
            <% } %>
        </ul>
    </div>

</div>
